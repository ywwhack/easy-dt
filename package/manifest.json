{
  "name": "easydt",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "一款每周让你多续 1min 的 chrome 插件",
  "icons" : {
    "16" : "icon16.png",
    "48" : "icon48.png",
    "128" : "icon128.png"
  },
  "browser_action": {
    "default_title": "easydt",
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
		"https://board.faas.ele.me/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://board.faas.ele.me/*"
      ],
      "js": [
        "index.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
